<project>
    <groupId>org.kubek2k</groupId>
    <artifactId>properties-weaver-pom</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modelVersion>4.0.0</modelVersion>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>default-cli</id>
                                <configuration>
                                    <target>
                                        <unzip src="${inputFile}" dest="${project.build.directory}/tmp"/>
                                        <copy file="${propertiesFile}" todir="${project.build.directory}/tmp" />
                                        <zip basedir="${project.build.directory}/tmp" destfile="${outputFile}"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
        </plugins>
    </build>
</project>
